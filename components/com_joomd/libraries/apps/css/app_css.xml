	<version>2.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>APP_CSS_DESCR</description>
	
	<files>
		
		<app folder="site">
			<filename>app_css.php</filename>
			<filename>index.html</filename>
		</app>
		
	</files>
	
	<administration>
		<!-- Administration Menu Section -->
		
		<menu link="option=com_joomd&amp;view=css">CSS</menu>
		
		<files>
			<!-- Site Main File Copy Section -->
			<views folder="admin/css" name="css">
				
				<filename>controller.php</filename>
				<filename>model.php</filename>
				<filename>table.php</filename>
				<filename>index.html</filename>
				<filename>view.html.php</filename>
				<folder>tmpl</folder>
				
			</views>
			
		</files>
		
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.app_css.sys.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.app_css.ini</language>
		</languages>
		
	</administration>
</extension>
