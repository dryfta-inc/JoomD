<?xml version="1.0" encoding="utf-8"?>
<extension type="joomdapp" apptype="1" version="2.5.0" method="upgrade" label="ITEM">
	<name>item</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>July 2012</creationDate>
	<author>Danish Babu</author>
	<authorEmail>support@joomla6teeen.com</authorEmail>
	<authorUrl>http://www.joomla6teeen.com</authorUrl>
	<copyright>Copyright Â© 2008-2012 Joomla6teen</copyright>
